{
  "name": "Usuario",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "apellidos": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "listaFamiliar": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": ""
    },
    "propietarios": {
      "type": "hasOne",
      "model": "ListaFamiliar",
      "foreignKey": "owner"
    },
    "solicitudes": {
      "type": "hasAndBelongsToMany",
      "model": "ListaFamiliar",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "AceptarSolicitudes"
    }
  ],
  "methods": {
    "prototype.AceptarSolicitudes": {
      "accepts": [
        {
          "arg": "contexto",
          "type": "object",
          "required": true,
          "description": "almacenar el objeto o instancia del id de usuario",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "solicitudAprobada",
          "type": "object",
          "root": true,
          "description": "no devuelve la solicitud con los datos necesario"
        }
      ],
      "description": "metodo para aceptar la solicitud",
      "http": [
        {
          "path": "/aceptarSolicitud",
          "verb": "put"
        }
      ]
    },
    "prototype.rechazarSolicitudes": {
      "accepts": [
        {
          "arg": "contexto",
          "type": "object",
          "required": true,
          "description": "contexto del metodo",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "arrayUsuarios",
          "type": "array",
          "root": false,
          "description": "array de los usuario que se les rechaza la lista"
        }
      ],
      "description": "metodo de rechazar solcitudes",
      "http": [
        {
          "path": "/rechazarSolicitudes",
          "verb": "delete"
        }
      ]
    }
  }
}
